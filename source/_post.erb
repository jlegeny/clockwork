<article role="article" itemscope itemtype="http://schema.org/BlogPosting">

	<header>
		<h1 class="h2"><%= link_to article.title, article %></h1>
		<p><time datetime="<%= article.date.strftime('%Y-%m-%d') %>"><%= article.date.strftime('%Y-%m-%d') %></time></p>
	</header>
	<section>
		<%= article.body %>
	</section>

	<footer>
		<p class="tags">
		<% article.tags.each do |tag| %>
			<% if tag != "" %>
			<%= link_to tag, tag_path(tag) %>
	<% end %>
	<% end %>
		</p>
	</footer>

</article>
